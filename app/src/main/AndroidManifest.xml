<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.anfema.breadcrumbsample"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".BreadcrumbSampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.anfema.breadcrumbsample.Layout1Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.anfema.breadcrumbsample.Layout2Activity">
        </activity>
        <activity android:name="com.anfema.breadcrumbsample.Layout3Activity">
        </activity>
    </application>

</manifest>